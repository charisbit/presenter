# =====================================
# Intelligent Presenter Configuration
# =====================================
# Copy this file to .env and fill in actual values

# ===================
# Core Services
# ===================

# Frontend Application URL
FRONTEND_BASE_URL=http://localhost:3003
VITE_ENABLE_MARKDOWN_LOGGING=true

# CORS Allowed Origins
CORS_ORIGINS=http://localhost:3003,http://frontend:3000,http://localhost:3000

# Backend Service Port
PORT=8080

# Runtime Mode (debug, release)
GIN_MODE=debug

# ===================
# Backlog OAuth Integration  
# ===================

# Backlog Domain
# Examples: your-space.backlog.jp, your-space.backlog.com
BACKLOG_DOMAIN=your-space.backlog.jp

# OAuth Application Credentials
# Register OAuth app in Backlog to get these
BACKLOG_CLIENT_ID=your-actual-client-id
BACKLOG_CLIENT_SECRET=your-actual-client-secret

# OAuth Redirect URL
# Change to actual domain for production
OAUTH_REDIRECT_URL=http://localhost:8081/api/v1/auth/callback

# Backlog API Key
BACKLOG_API_KEY=your-backlog-api-key

# ===================
# AI Integration
# ===================

# AI Provider: "openai" or "bedrock"
AI_PROVIDER=openai

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# AWS Bedrock Configuration
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# ===================
# MCP Service URLs
# ===================

# Backlog MCP Service
MCP_BACKLOG_URL=http://localhost:3001

# Speech Synthesis MCP Service
MCP_SPEECH_URL=http://localhost:3002

# ===================
# Security Configuration
# ===================

# JWT Secret Key
# Use strong random key for production
JWT_SECRET=intelligent-presenter-secret-key

# ===================
# Production Example
# ===================
# Configuration example for production deployment
#
# FRONTEND_BASE_URL=https://presenter.your-domain.com
# BACKLOG_DOMAIN=your-company.backlog.jp  
# OAUTH_REDIRECT_URL=https://presenter.your-domain.com/api/v1/auth/callback
# GIN_MODE=release
# JWT_SECRET=your-super-secure-random-jwt-secret-key-here

# ===================
# Optional Configuration
# ===================

# Log Level (debug, info, warn, error)
# LOG_LEVEL=info

# Frontend Configuration
# NODE_ENV=development
# VITE_API_BASE_URL=http://localhost:8080

# Redis Cache (if using external Redis)
# REDIS_URL=redis://localhost:6379
